<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Main Background Gradient Layer -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#BBDEFB"
                android:endColor="#ECEFF1"
                android:type="linear"/>
        </shape>
    </item>

    <!-- Optional Overlay Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000020" /> <!-- Light transparent overlay -->
            <corners android:radius="10dp"/>
        </shape>
    </item>
</layer-list>
