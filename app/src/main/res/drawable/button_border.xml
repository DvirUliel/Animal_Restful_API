<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- Gradient Background (Deep Blue to Silver) -->
            <gradient
                android:angle="45"
                android:startColor="#003366"
                android:endColor="#C0C0C0"/>  <!-- Silver -->

            <!-- Border (Dark Gray) -->
            <stroke android:width="2dp" android:color="#333333"/> <!-- Dark Gray border color -->

            <!-- Rounded Corners -->
            <corners android:radius="20dp"/>

            <!-- Padding -->
            <padding android:left="16dp" android:right="16dp"/>
        </shape>
    </item>
</selector>
