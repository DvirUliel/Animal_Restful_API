<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/gradient_background"
    android:padding="16dp">

    <!-- App Logo or Icon -->
    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:src="@drawable/logo"
        android:contentDescription="App Logo"
        android:layout_marginBottom="30dp"/>

    <!-- Welcome text with a more elegant font and spacing -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Animal Finder"
        android:textSize="26sp"
        android:textStyle="bold"
        android:paddingBottom="30dp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-medium"
        android:textAlignment="center"/>

    <!-- A brief description about the app -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find and learn about animals in an easy and fun way."
        android:textSize="16sp"
        android:textColor="@color/white"
        android:paddingBottom="40dp"
        android:textAlignment="center"
        android:lineSpacingExtra="8dp"/>

    <!-- Get Started button with rounded corners and shadow -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/getStartedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@drawable/button_border"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="32dp"
        android:paddingVertical="14dp"
        android:elevation="4dp"/>

    <!-- Optional: Additional Text or Link (e.g. "Sign Up" or "Learn More") -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:paddingTop="20dp"
        android:textAlignment="center"
        android:clickable="true"
        android:focusable="true"
        android:paddingBottom="10dp"/>

</LinearLayout>
