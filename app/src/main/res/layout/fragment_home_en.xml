<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/gradient_background"
    android:padding="16dp">

    <!-- App Logo or Icon -->
    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:src="@drawable/logo"
        android:contentDescription="App Logo"
        android:layout_marginBottom="30dp"/>

    <!-- Welcome text with a more elegant font and spacing -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Animal Finder"
        android:textSize="32sp"
        android:textStyle="bold"
        android:paddingBottom="30dp"
        android:textColor="#333333"
        android:fontFamily="@font/dancing_script"
        android:textAlignment="center"/>

    <!-- A brief description about the app -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discover and explore animals easily."
        android:textSize="16sp"
        android:textColor="#333333"
        android:paddingBottom="40dp"
        android:textAlignment="center"
        android:lineSpacingExtra="8dp"
        android:fontFamily="@font/lora"
        android:textStyle="italic"/>

    <!-- Get Started button with rounded corners and shadow -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/getStartedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@drawable/start_button"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="32dp"
        android:paddingVertical="14dp"
        android:elevation="4dp"
        android:stateListAnimator="@animator/hover_effect"/>


</LinearLayout>
